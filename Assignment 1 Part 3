#include <iostream>
using namespace std;

int main()
{
	cout << "The size of char on this computer (in bytes) is : " << sizeof(char) << endl;
	cout << "The size of int on this computer (in bytes) is : " << sizeof(int) << endl;
	cout << "The size of float on this computer (in bytes) is : " << sizeof(float) << endl;
	cout << "The size of double on this computer (in bytes) is: " << sizeof(double) << endl;
  
	return 0;
}
